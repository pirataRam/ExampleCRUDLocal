<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leaitem_mcv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:elevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/login_button_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leaitem_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_card">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/leaitem_aciv"
            android:layout_width="@dimen/photo_size"
            android:layout_height="@dimen/photo_size"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/leaitem_actv_name_label"
            style="@style/GlobalFieldsLayoutInputTextGeneric"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:text="@string/people_form_field_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/leaitem_aciv"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/leaitem_actv_name"
            style="@style/GlobalFieldsLayoutInputTextGeneric"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/leaitem_aciv"
            app:layout_constraintTop_toBottomOf="@+id/leaitem_actv_name_label" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/leaitem_actv_subname_label"
            style="@style/GlobalFieldsLayoutInputTextGeneric"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:text="@string/people_form_field_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/leaitem_aciv"
            app:layout_constraintTop_toBottomOf="@id/leaitem_actv_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/leaitem_actv_subname"
            style="@style/GlobalFieldsLayoutInputTextGeneric"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/leaitem_aciv"
            app:layout_constraintTop_toBottomOf="@id/leaitem_actv_subname_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>