<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/info_actv_title"
            style="@style/Label.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/dialog_title_text_size"
            android:textAlignment="center"
            tools:text="Â¡A ocurrido un error!" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/info_actv_msg"
            style="@style/Label.Subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/dialog_message_text_size"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/info_actv_title"
            android:textAlignment="center"
            tools:text="No se pudieron obtener las personas" />

</androidx.constraintlayout.widget.ConstraintLayout>