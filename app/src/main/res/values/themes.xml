<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExampleCRUDLocal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ExampleCRUDLocal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ExampleCRUDLocal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExampleCRUDLocal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Label">
        <item name="android:layout_marginStart">@dimen/text_margin_generic</item>
        <item name="android:layout_marginTop">@dimen/text_margin_generic</item>
        <item name="android:layout_marginEnd">@dimen/text_margin_generic</item>
    </style>

    <style name="Label.Title">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Label.Subtitle">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/label_text_color</item>
        <item name="android:textSize">@dimen/text_size_label</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>